<svg width="800" height="600" xmlns="http://www.w3.org/2000/svg">
  <rect width="800" height="600" fill="#f8f9fa"/>
  <text x="400" y="180" font-family="Arial" font-size="36" text-anchor="middle" fill="#0072ce">Selection Guide</text>
  <text x="400" y="230" font-family="Arial" font-size="24" text-anchor="middle" fill="#6B7280">How to Choose the Right Module</text>
  
  <!-- Decision tree representation -->
  <g stroke="#0072ce" stroke-width="2" fill="none">
    <circle cx="400" cy="300" r="40" fill="#e6f0ff"/>
    <text x="400" y="305" font-family="Arial" font-size="16" text-anchor="middle" fill="#0072ce">Start</text>
    
    <line x1="400" y1="340" x2="320" y2="380"/>
    <line x1="400" y1="340" x2="480" y2="380"/>
    
    <circle cx="320" cy="420" r="35" fill="#e6f0ff"/>
    <text x="320" y="425" font-family="Arial" font-size="14" text-anchor="middle" fill="#0072ce">DCM</text>
    
    <circle cx="480" cy="420" r="35" fill="#e6f0ff"/>
    <text x="480" y="425" font-family="Arial" font-size="14" text-anchor="middle" fill="#0072ce">BCM</text>
  </g>
  
  <!-- Additional options -->
  <g fill="#e6f0ff" stroke="#0072ce" stroke-width="1">
    <rect x="150" y="480" width="90" height="40" rx="5"/>
    <rect x="250" y="480" width="90" height="40" rx="5"/>
    <rect x="350" y="480" width="90" height="40" rx="5"/>
    <rect x="450" y="480" width="90" height="40" rx="5"/>
    <rect x="550" y="480" width="90" height="40" rx="5"/>
  </g>
  
  <g font-family="Arial" font-size="14" text-anchor="middle" fill="#0072ce">
    <text x="195" y="505">PRM</text>
    <text x="295" y="505">VTM</text>
    <text x="395" y="505">Cool-Power</text>
    <text x="495" y="505">Filters</text>
    <text x="595" y="505">Accessories</text>
  </g>
  
  <!-- Arrows showing flow -->
  <g fill="#f97316">
    <polygon points="350,370 360,350 370,370"/>
    <polygon points="430,370 440,350 450,370"/>
    <polygon points="280,470 290,450 300,470"/>
    <polygon points="360,470 370,450 380,470"/>
  </g>
  
  <!-- Checklists -->
  <g fill="none" stroke="#0072ce" stroke-width="2">
    <rect x="100" y="100" width="150" height="100" rx="10"/>
    <rect x="550" y="100" width="150" height="100" rx="10"/>
  </g>
  
  <g font-family="Arial" font-size="14" fill="#0072ce">
    <text x="110" y="125">Input Voltage</text>
    <text x="110" y="145">Power Level</text>
    <text x="110" y="165">Isolation</text>
    <text x="110" y="185">Regulation</text>
    
    <text x="560" y="125">Size Limit</text>
    <text x="560" y="145">Efficiency</text>
    <text x="560" y="165">Cost Target</text>
    <text x="560" y="185">Thermal</text>
  </g>
</svg>